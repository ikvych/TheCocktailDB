<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/main_navigation_view"
            style="@style/NavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/drink_name_details"
                style="@style/NavigationViewTitle"
                android:text="@string/app_name" />

        </com.google.android.material.navigation.NavigationView>

        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="@dimen/liner_layout_width_for_rv"
            android:layout_height="@dimen/liner_layout_height_for_rv"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_navigation_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/db_recycler_view"
                style="@style/RecyclerView" />

            <!--Shown when the database is empty-->
            <TextView
                android:id="@+id/empty_history"
                style="@style/EmptyListElements"
                android:text="@string/empty_history" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/search"
            style="@style/SearchButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>