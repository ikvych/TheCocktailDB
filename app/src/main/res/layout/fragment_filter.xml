<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_filter_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".ui.fragment.FilterFragment">

    <com.ikvych.cocktail.widget.custom.ApplicationToolBar
        android:id="@+id/atb_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_max"
        android:background="@drawable/app_bar_bg_shape"
        android:elevation="@dimen/elevation_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_enable_custom_btn="true" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_filter_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atb_fragment_filter">

        <LinearLayout
            android:id="@+id/ivan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            app:layout_behavior="@string/fab_transformation_sheet_behavior">

            <LinearLayout
                android:id="@+id/im_alcohol_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginHorizontal="@dimen/offset_24"
                android:layout_marginVertical="@dimen/offset_8"
                android:background="@drawable/iten_drink_filter_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:text="@string/tv_filter_fragment_alcohol_filter"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:src="@drawable/ic_drink_alcohol_filter_arrow" />

                <TextView
                    android:id="@+id/tv_chosen_alcohol_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:textAppearance="@style/AppTextAppearanceHeadline6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/im_category_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginHorizontal="@dimen/offset_24"
                android:layout_marginVertical="@dimen/offset_8"
                android:background="@drawable/iten_drink_filter_shape"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:text="@string/tv_filter_fragment_category_filter"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:src="@drawable/ic_drink_alcohol_filter_arrow" />

                <TextView
                    android:id="@+id/tv_chosen_category_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:textAppearance="@style/AppTextAppearanceHeadline6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/im_ingredient_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginHorizontal="@dimen/offset_24"
                android:layout_marginVertical="@dimen/offset_8"
                android:background="@drawable/iten_drink_filter_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:text="@string/tv_filter_fragment_ingredient_filter"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:src="@drawable/ic_drink_alcohol_filter_arrow" />

                <TextView
                    android:id="@+id/tv_chosen_ingredient_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:textAppearance="@style/AppTextAppearanceHeadline6" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_16"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            app:layout_behavior="@string/fab_transformation_sheet_behavior">

            <LinearLayout
                android:id="@+id/ll_btn_container"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_accept"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_margin="@dimen/offset_8"
                    android:layout_marginVertical="@dimen/offset_16"
                    android:layout_weight="1"
                    android:text="@string/accept"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/design_default_color_primary_dark" />

                <Button
                    android:id="@+id/btn_reject"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_margin="@dimen/offset_8"
                    android:layout_marginVertical="@dimen/offset_16"
                    android:layout_weight="1"
                    android:text="@string/reset"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/design_default_color_primary_dark" />

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>