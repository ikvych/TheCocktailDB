<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.App.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorControlActivated">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="textAppearanceHeadline4">@style/AppTextAppearanceHeadline4</item>
        <item name="android:popupMenuStyle">@style/Widget.PopupMenu</item>
        <item name="popupMenuStyle">@style/Widget.PopupMenu</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/battery_charging</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Widget.PopupMenu" parent="">
        <item name="android:popupBackground" tools:ignore="PrivateResource">
            @drawable/mtrl_popupmenu_background
        </item>
        <item name="android:popupElevation">8dp</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">1px</item>
        <item name="fontFamily">?fontProviderAuthority</item>
        <item name="android:fontFamily">?fontProviderAuthority</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:popupAnimationStyle">@style/PopupAnimationStyle</item>
    </style>

    <style name="PopupAnimationStyle">
        <!--        <item name="android:windowEnterAnimation">@anim/menu_in</item>
                <item name="android:windowExitAnimation">@anim/menu_out</item>-->
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">?fontProviderAuthority</item>
        <item name="android:fontFamily">?fontProviderAuthority</item>
        <item name="itemIconTint">@color/design_default_color_error</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">?colorPrimary</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">?colorPrimary</item>
    </style>

    <!--Splash image-->
    <style name="SplashImage">
        <item name="android:layout_marginStart">@dimen/offset_24</item>
        <item name="android:layout_marginEnd">@dimen/offset_24</item>
    </style>

    <!--override textAppearanceHeadline4-->
    <style name="AppTextAppearanceHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/color_on_secondary</item>
    </style>

    <!--Text When RecyclerView is Empty-->
    <style name="TextOnEmptyRecyclerView">
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <!--RecyclerView Style-->
    <style name="RecyclerView">
        <item name="android:layout_marginLeft">@dimen/offset_8</item>
        <item name="android:layout_marginRight">@dimen/offset_8</item>
    </style>

    <!--SearchView Style-->
    <style name="AppSearchView">
        <item name="android:layout_margin">@dimen/offset_8</item>
        <item name="android:background">@drawable/shape_search_view</item>
        <item name="android:elevation">@dimen/elevation_4</item>
        <item name="android:inputType">text</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>

    <!--Navigation Title-->
    <style name="NavigationViewTitle">
        <item name="android:layout_marginLeft">@dimen/offset_72</item>
        <item name="android:layout_marginTop">@dimen/offset_16</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <!--Search Button-->
    <style name="SearchButton">
        <item name="android:layout_width">@dimen/btn_width_max</item>
        <item name="android:layout_height">@dimen/btn_height_max</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginRight">@dimen/offset_16</item>
        <item name="android:layout_marginBottom">@dimen/offset_16</item>
    </style>

    <style name="DialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/inset_regular_dialog_fragment</item>
    </style>


</resources>
