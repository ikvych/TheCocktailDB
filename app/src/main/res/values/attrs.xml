<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ApplicationToolBar">
        <attr name="tl_is_for_search" format="boolean"/>
        <attr name="tl_set_text" format="string"/>
        <attr name="tl_enable_custom_btn" format="boolean"/>
        <attr name="tl_enable_sort_btn" format="boolean"/>
        <attr name="tl_disable_return_btn" format="boolean"/>
        <attr name="tl_set_transparent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomLayoutLP">
        <attr name="android:layout_gravity" />
        <attr name="layout_position">
            <enum name="middle" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AspectRatioFrameLayout">
        <attr name="arfl_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="arfl_aspect_ratio" format="float|reference"/>
        <attr name="arfl_min_size_by_mode" format="dimension"/>
        <attr name="arfl_min_size_by_reverse_mode" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PartibleAppBarLayout">
        <attr name="pabl_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="pabl_part" format="float|reference"/>
    </declare-styleable>

    <declare-styleable name="AspectRatioTextView">
        <attr name="artv_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="artv_aspect_ratio" format="float|reference"/>
    </declare-styleable>

    <declare-styleable name="AspectRatioCardView">
        <attr name="arcv_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="arcv_aspect_ratio" format="float|reference"/>
    </declare-styleable>

    <declare-styleable name="LinearLayoutWithChildLimiter_Layout">
        <attr name="layout_max_size" format="dimension" />
        <attr name="layout_percent_size" format="integer" />
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="LinearLayoutWithChildLimiter">
        <attr name="android:orientation"/>
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="mrsb_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="mrsb_min_value" format="integer"/>
        <attr name="mrsb_max_value" format="integer"/>
        <attr name="mrsb_background_height" format="dimension"/>
        <attr name="mrsb_background_is_rounded" format="boolean"/>
        <attr name="mrsb_background_color" format="color"/>
        <attr name="mrsb_background_gradient_left" format="color"/>
        <attr name="mrsb_background_gradient_right" format="color"/>
        <attr name="mrsb_foreground_height" format="color"/>
        <attr name="mrsb_foreground_color" format="color"/>
        <attr name="mrsb_foreground_gradient_left" format="color"/>
        <attr name="mrsb_foreground_gradient_right" format="color"/>
        <attr name="mrsb_thumb_color_active" format="color"/>
        <attr name="mrsb_thumb_color_disable" format="color"/>
        <attr name="mrsb_thumb_color_gradient_top_active" format="color"/>
        <attr name="mrsb_thumb_color_gradient_bottom_active" format="color"/>
        <attr name="mrsb_thumb_color_gradient_top_disable" format="color"/>
        <attr name="mrsb_thumb_color_gradient_bottom_disable" format="color"/>
        <attr name="mrsb_thumb_size_active" format="dimension"/>
        <attr name="mrsb_thumb_size_disable" format="dimension"/>
        <attr name="mrsb_value_text_size" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="GifView2">
        <attr name="gv_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="gv_aspect_ratio" format="float|reference"/>

        <attr name="gv_circle_color" format="color|reference" />
        <attr name="gv_min_circle_size" format="dimension" />
        <attr name="gv_max_circle_size" format="dimension" />
        <attr name="gv_cycle_duration" format="integer" />
        <!--радіальні кольори-->
        <attr name="gv_circle_internal_color" format="color|reference" />
        <attr name="gv_circle_external_color" format="color|reference" />

        <attr name="gv_circle_count" format="integer" />
        <attr name="gv_sweep_angle" format="integer" />
        <!--стиснутість еліапса-->
        <attr name="gv_compress_ratio" format="float" />
    </declare-styleable>
</resources>