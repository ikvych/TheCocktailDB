<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.FilterFragment">

    <RadioGroup
        android:id="@+id/alcohol_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_alcoholic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alcoholic"/>

        <RadioButton
            android:id="@+id/rb_non_alcoholic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/non_alcoholic"/>

        <RadioButton
            android:id="@+id/rb_optional_alcoholic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optional_alcoholic"/>

        <RadioButton
            android:id="@+id/rb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"/>

    </RadioGroup>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="@dimen/auth_login_btn_margin_start"
            android:layout_marginVertical="@dimen/auth_indents"
            android:text="@string/accept"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp"
            app:backgroundTint="@color/design_default_color_primary_dark"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="@dimen/auth_login_btn_margin_start"
            android:layout_marginVertical="@dimen/auth_indents"
            android:text="@string/reset"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp"
            app:backgroundTint="@color/design_default_color_primary_dark"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>