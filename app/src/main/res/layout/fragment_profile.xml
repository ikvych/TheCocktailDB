<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.fragment.ProfileFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/b_log_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_login_btn_margin_start"
        android:layout_margin="@dimen/auth_indents"
        android:text="@string/profile_log_out_button"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/design_default_color_primary_dark" />

    <Button
        android:id="@+id/b_start_test_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_login_btn_margin_start"
        android:layout_margin="@dimen/auth_indents"
        android:text="@string/profile_start_test_fragment_button"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/design_default_color_primary_dark" />

    <CheckBox
        android:id="@+id/cb_main_nav_bar_title_visibility"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_16"
        android:checked="true"
        android:text="@string/profile_show_hide_main_navigation_bar_titles"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
</layout>